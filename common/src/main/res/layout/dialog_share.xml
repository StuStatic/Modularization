<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/share_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/share_to"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/c_4e4e4e"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/share_wx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/weichat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/we_chat"
                    android:textSize="14sp"
                    android:textColor="@color/c_888888"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_wx_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@mipmap/pengyouquan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/we_chat_circle"
                    android:textSize="14sp"
                    android:textColor="@color/c_888888"/>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/share_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:src="@mipmap/share_close"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>